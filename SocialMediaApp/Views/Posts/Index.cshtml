@model IEnumerable<SocialMediaApp.Models.Posts>

@{
    ViewData["Title"] = "Index";

    Pager pager = new Pager();

    int pageNo = 0;
    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<h1>Index</h1>
<form asp-action="Index" method="get">
    <div>
        <p>
            Find Post <input type = "text" name="searchString" value="" />
            <input type="submit" value="Search" class="btn btn-info"s />
            <a asp-action="Index">Remove Filter</a>
        </p>
    </div>

</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.caption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.latitude)
            </th>
            <th>
               <a asp-action="Index" asp-route-sortOrder="@ViewBag.PriceSortParam">@Html.DisplayNameFor(model => model.longtitude)</a> 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.post_url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date_created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date_update)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.caption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.longtitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.post_url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_update)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.activation_key)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="container">
    @if(pager.TotalPages > 0){
        <ul class="pagination justify-content-end">
            @for(var pge = pager.StartPage; pge<=pager.EndPage;pge++){
                <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Posts" asp-action="Index" asp-route-pg="@pge">@pge</a>
                </li>
            }
        </ul>
    }
</div>