@model SocialMediaApp.ViewModels.LikePostUserViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Likes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="date_created" class="control-label"></label>
                <input asp-for="date_created" class="form-control" />
                <span asp-validation-for="date_created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <select asp-for="UserId" class="form-select form-control">
                    @foreach (User user in Model.Users)
                    {
                        <option value="@user.Id">@user.first_name @user.last_name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <select asp-for="PostId" class="form-select form-control">
                    @foreach (Posts posts in Model.Posts)
                    {
                        <option value="@posts.Id">@posts.caption </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
